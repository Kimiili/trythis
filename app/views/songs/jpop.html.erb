<div class="main-container">
<h1>J-POP</h1>

<% @jpops.each do |t| %>
    <% if t.category == "jpop" %> 
        <p>曲名<%= t.name %></p>
        <p>アーティスト<%= t.singer %></p>
        <%= image_tag t.image_url, size: "250x200" if t.image? %>
    <% end %>
    <%= link_to "詳細へ", song_path(t.id) %>
<% end %>

<%= link_to "みんなの投稿一覧に戻る", songs_path %>
</div>